<div class="user-profile">
  <h1><%= @user.name %>のプロフィール</h1>
  
  <div class="user-info">
    <% if current_user == @user %>
      <div class="private-info">
        <p>メールアドレス: <%= @user.email %></p>
        <p>登録日: <%= @user.created_at.strftime('%Y年%m月%d日') %></p>
      </div>
    <% end %>
  </div>

  <h2><%= @user.name %>の投稿</h2>
  <div class="pro-reco-grid">
    <% @pro_recos.each do |pro_reco| %>
      <div class="pro-reco-card">
        <%= link_to pro_reco_path(pro_reco) do %>
          <h3><%= pro_reco.title %></h3>
          <p><%= truncate(pro_reco.content, length: 100) %></p>
          <span class="date"><%= pro_reco.created_at.strftime('%Y年%m月%d日') %></span>
        <% end %>
      </div>
    <% end %>
  </div>

</div>